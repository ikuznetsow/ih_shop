	<!-- errors.ispect -->
<% if @user.errors.any? %>
	<div id="error_explanation" style="color:red;">
		<% @user.errors.full_messages.each do |message| %>
			<%= message %> </br>
		<% end %> 
	</div>
<% end %> 

<%= form_for @user do |f| %>

		<%= f.label :name %><%= f.text_field :name %><br />
		<%= f.label :email %><%= f.text_field :email %><br />
		<%= f.label :password %><%= f.password_field :password %>
		<%= f.label :password_confirmation %><%= f.password_field :password_confirmation %><br />
		<%= f.submit %>

<% end %>
<br>